<data>
    <record id="view_hms_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="HMS Patient">
                <sheet>
                    <div>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="image"/>
                        </group>
                        <group>
                            <field name="blood_type"/>
                            <field name="pcr"/>
                            <field name="cr_ratio"/>
                            <field name="history"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="doctor_ids" domain="[('id', 'in', department_id.doctor_ids.ids)]" readonly="1"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_hms_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hms" name="HMS"/>
    <menuitem id="menu_hms_patient" name="Patients" parent="menu_hms" action="action_hms_patient"/>
</data>
