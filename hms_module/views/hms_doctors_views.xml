<odoo>
    <data>

        <record id="view_hms_doctor_form" model="ir.ui.view">
            <field name="name">hms.doctor.form</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <form string="Hospital Doctor">
                    <sheet>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_view_hms_doctors" model="ir.actions.act_window">
            <field name="name">HMS Doctors</field>
            <field name="res_model">hms.doctor</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create a new doctor</p>
            </field>
        </record>

        <menuitem id="menu_hms" name="HMS"/>
        <menuitem id="menu_hms_doctor" name="Doctors" parent="menu_hms" action="action_view_hms_doctors"/>

    </data>
</odoo>
