<odoo>
    <data>
        <record id="view_hms_doctor_form" model="ir.ui.view">
            <field name="name">hms.doctor.form</field>
            <field name="model">hms.doctor</field>
            <field name="arch" type="xml">
                <form string="HMS Doctor">
                    <sheet>
                        <div>
                            <group>
                                <field name="first_name"/>
                            </group>
                            <group>
                                <field name="last_name"/>
                            </group>
                            <group>
                                <field name="image"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_hms_doctor" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="res_model">hms.doctor</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hms" name="HMS"/>
        <menuitem id="menu_hms_doctor" name="HMS Doctors" parent="menu_hms" action="action_hms_doctor"/>
    </data>
</odoo>
